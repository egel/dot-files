[include]
  # For user, email, ect.
  path = ~/.gitconfig.local
  ;path = ~/.gitconfig.local_work

[color]
  ui = auto

[push]
  default = simple

[core]
  editor = vim

[merge]
  tool = meld

[diff]
  tool = vimdiff

[alias]
  # show currently using git user
  currentUser = ! git config --list | grep "user" | grep -v "currentUser"

  # diff the last commit
  dl = diff HEAD^ HEAD

  # list commands
  last = log -1 HEAD

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
