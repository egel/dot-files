[include]
  # For user, email, ect.
  path = ~/.gitconfig.local
  ; path = ~/.gitconfig.local_work

[commit]
	gpgsign = true

[gpg]
	program = /usr/local/bin/gpg

[color]
  ui = auto

[push]
  default = simple

[core]
  ; For OSX and Linux "input"
  autocrlf = input
  editor = vim

[merge]
    tool = intellij
[mergetool "intellij"]
    cmd = /Users/maciejsypien/Library/Application\\ Support/JetBrains/Toolbox/apps/IDEA-U/ch-0/191.7479.19/IntelliJ\\ IDEA.app/Contents/MacOS/idea merge $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE") $(cd $(dirname "$BASE") && pwd)/$(basename "$BASE") $(cd $(dirname "$MERGED") && pwd)/$(basename "$MERGED")
    trustExitCode = true
[diff]
    tool = intellij
[difftool "intellij"]
    cmd = /Users/maciejsypien/Library/Application\\ Support/JetBrains/Toolbox/apps/IDEA-U/ch-0/191.7479.19/IntelliJ\\ IDEA.app/Contents/MacOS/idea diff $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE")

; [merge]
  ; tool = vimdiff

; [diff]
  ; tool = vimdiff

[alias]
  # show currently using git user
  currentUser = ! git config --list | grep "user" | grep -v "currentUser"

  # diff the last commit
  dl = diff HEAD^ HEAD

  # list commands
  last = log -1 HEAD

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
